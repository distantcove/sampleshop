<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<%= link_to 'Write a Message', new_message_path %>

<div class="container">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Note</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.title %></td>
          <td><%= message.note %></td>
          <td><%= link_to 'View', message %></td>
          <td><%= link_to 'Edit', edit_message_path(message) %></td>
          <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Delete?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>


