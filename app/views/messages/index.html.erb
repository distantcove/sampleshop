<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<button type="button" class="btn btn-default btn-lg" id="message-new-btn">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'New Note', new_message_path %>
</button>

<%= form_tag("/messages", method: "get") do %>
  <%= label_tag(:q, "Search Messages:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>


<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-md-4">Title</div>
    <div class="col-sm-4 col-md-4">Note</div>
    <div class="col-sm-4 col-md-4">Options</div>
  </div>
  <div class="row">
    <%= render @messages %>
  </div>
      

    </div>  
  </div>
</div>


